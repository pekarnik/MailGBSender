<Window x:Class="WpfTestMailSender.SendErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="175" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>

        <Label x:Name="lSendEnd" Content="Ошибка отправления!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" 
                FontFamily="Arial"   >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF0000" Offset="0.013"/>
                    <GradientStop Color="#FFFFAAAA" Offset="0.41800001263618469"/>
                    <GradientStop Color="#FFFFBBBB" Offset="0.418"/>
                    <GradientStop Color="#FFFFCCCC" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Right" Margin="50,20" VerticalAlignment="Bottom" Width="75" Click="btnOK_Click"/>

    </Grid>
</Window>
